# Django
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_VALUE
ALLOWED_HOSTS=*

# Admin user (created automatically on first run)
NOCTIS_ADMIN_USERNAME=admin
NOCTIS_ADMIN_EMAIL=noctis-pro6@gmail.com
NOCTIS_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Postgres (persistent via Docker named volume)
